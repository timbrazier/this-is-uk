<table border="0" cellpadding="0" cellspacing="0" id="structure">
	<tbody>
    <%= render(:partial => "guide/banner") %>
	<tr id="nav">
		<td class="left">&nbsp;</td>
		<td class="main">
			<ul id="nav_list">
				<li id="nav_restaurants" class="on_state"><a href="#">Register</a></li>
			</ul>
		</td>
		<td class="right">&nbsp;</td>
	</tr>
	<tr id="content">
		<td class="left">&nbsp;</td>
		<td class="main">
			<div id="subnav_column">
			
				<div class="drop_shadow">
					<div class="side_box">
						<h2>Register</h2>
						<ul id="type_list">
							<li><a>Step 1</a></li>

						</ul>
					</div>
				</div>
				
			<!--	<div class="drop_shadow">
					<div class="side_box">
						<h2>Area</h2>
						<ul id="area_list">
							<li><a href="#">All</a></li>
						</ul>
					</div>
				</div> -->
				
			</div>
			
			
			<div id="main_column">
				<div class="item">
					
					<h2>Please Enter Your Details</h2>
					<span style="height:300px; background-color:#efe"><p>&nbsp;</p></span>
					<form action="" method="POST">
					<%= error_messages_for(:user) %>
					<p>First Name¬<br/><%= text_field("user", "first_name", "length" => "24" ) %></p>
					<p>Surname¬<br/><%= text_field("user", "last_name", "length" => "24" ) %></p>
					<p>Screen Name¬<br/><%= text_field("user", "username", "length" => "24" ) %></p>
					<p>Password¬<br/><%= password_field("user", "password", "length" => "24" ) %></p>
					<!--p>Confirm¬<br/><input type="password" name="pwd_confirm" length="24"></p-->
					<p>Email¬<br/><%= text_field("user", "email", "length" => "24" ) %></p>
					<p><input type="submit" name="submit" value="submit"></p>
										
					
				</div><!-- / item -->
				
				<hr />				
			</div>
			
			<br style="clear:all;" />
			<%= render(:partial => "guide/footer") %>
		</td>
		<td class="right">&nbsp;</td>
	</tr>
	<tr id="foot_cap">
		<td class="left">&nbsp;</td>
		<td class="main">
			<div class="bottom_left_corner">&nbsp;</div><div class="bottom_right_corner">&nbsp;</div>&nbsp; 
		</td>
		<td class="right">&nbsp;</td>
	</tr>
	</tbody>
</table>